# Cloudflare Pages Headers Configuration
# This file configures caching and performance headers for edge caching

# Cache static assets aggressively
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache API responses with optimized TTL (1 min browser, 5 min CDN, 10 min stale-while-revalidate)
/api/vehicles
  Cache-Control: public, max-age=60, s-maxage=300, stale-while-revalidate=600
  X-Content-Type-Options: nosniff
  Vary: Accept-Encoding

# Cache vehicle data endpoint
/api/vehicle-data
  Cache-Control: public, max-age=3600, s-maxage=3600, stale-while-revalidate=7200

# Cache HTML with shorter TTL (1 hour)
/*
  Cache-Control: public, max-age=3600, s-maxage=3600, stale-while-revalidate=7200
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin

# Security headers
/*
  X-XSS-Protection: 1; mode=block
  Permissions-Policy: geolocation=(), microphone=(), camera=()

