{
  "rules": {
    "users": {
      "$userKey": {
        // Public read for basic profile info (for seller profiles)
        "name": { ".read": true },
        "email": { ".read": true },
        "avatarUrl": { ".read": true },
        "role": { ".read": true },
        "isVerified": { ".read": true },
        "dealershipName": { ".read": true },
        "bio": { ".read": true },
        "logoUrl": { ".read": true },
        "averageRating": { ".read": true },
        "ratingCount": { ".read": true },
        "badges": { ".read": true },
        "phoneVerified": { ".read": true },
        "emailVerified": { ".read": true },
        "govtIdVerified": { ".read": true },
        "trustScore": { ".read": true },
        "subscriptionPlan": { ".read": true },
        "location": { ".read": true },
        
        // Full read/write for authenticated users matching this user
        // Check by firebaseUid field matching auth.uid
        ".read": "auth != null && (data.child('firebaseUid').val() == auth.uid)",
        ".write": "auth != null && (data.child('firebaseUid').val() == auth.uid || (!data.exists() && newData.child('firebaseUid').val() == auth.uid))",
        
        // Password is never readable, only writable by owner
        "password": {
          ".read": false,
          ".write": "auth != null && (data.child('firebaseUid').val() == auth.uid || (!data.exists() && newData.child('firebaseUid').val() == auth.uid))"
        },
        
        // Sensitive fields require authentication and ownership
        "mobile": {
          ".read": "auth != null && data.child('firebaseUid').val() == auth.uid"
        },
        "alternatePhone": {
          ".read": "auth != null && data.child('firebaseUid').val() == auth.uid"
        },
        "pendingPlanUpgrade": {
          ".read": "auth != null && data.child('firebaseUid').val() == auth.uid"
        }
      },
      
      // For serverless: Allow authenticated access (Admin SDK recommended instead)
      ".read": "auth != null",
      ".write": "auth != null"
    },
    
    "vehicles": {
      "$vehicleId": {
        // Public read for published vehicles, authenticated read for own vehicles
        ".read": "data.child('status').val() == 'published' || auth != null",
        
        // Authenticated users can write (server will validate sellerEmail match)
        // For production, add sellerEmail validation here if needed
        ".write": "auth != null",
        
        ".validate": "!newData.exists() || newData.hasChildren(['make', 'model', 'price', 'sellerEmail'])"
      },
      
      // Public query access for published vehicles
      ".read": true,
      ".write": "auth != null"
    },
    
    "conversations": {
      "$conversationId": {
        // Authenticated users can read/write (server validates participant match)
        ".read": "auth != null",
        ".write": "auth != null",
        ".validate": "!newData.exists() || newData.hasChildren(['customerId', 'sellerId', 'vehicleId'])"
      },
      ".read": false,
      ".write": false
    },
    
    "notifications": {
      "$notificationId": {
        // Authenticated users can read/write (server validates ownership)
        ".read": "auth != null",
        ".write": "auth != null"
      },
      ".read": false,
      ".write": false
    },
    
    "vehicleData": {
      ".read": true,
      ".write": "auth != null",
      "$key": {
        ".read": true,
        ".write": "auth != null"
      }
    },
    
    "newCars": {
      ".read": true,
      ".write": "auth != null",
      "$carId": {
        ".read": true,
        ".write": "auth != null"
      }
    },
    
    "plans": {
      ".read": true,
      ".write": "auth != null",
      "$planId": {
        ".read": true,
        ".write": "auth != null"
      }
    },
    
    "rateLimits": {
      "$userId": {
        // Users can access their own rate limits by UID
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId"
      },
      ".read": "auth != null",
      ".write": "auth != null"
    },
    
    "$other": {
      ".read": false,
      ".write": false
    }
  }
}

